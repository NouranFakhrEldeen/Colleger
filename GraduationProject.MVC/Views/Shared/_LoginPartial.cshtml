@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {

        <ul class="navbar-nav">
            <li class="nav-item">
                @*<a class="nav-link" href=" @Url.Action("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage")"> </a>*@
                @Html.ActionLink("Hello " + (User.Identity).GetUserName() + "!", "Index", "Tasks", routeValues: null, htmlAttributes: new { title = "Home", @class = "nav-link" })


            </li>
            <li class="nav-item">
                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
            </li>
            @*<li class="nav-item">
                @Html.ActionLink("Change Password", "ChangePassword", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link" })
            </li>*@
        </ul>
    }
}
else
{
    <ul class="navbar-nav user-nav">

        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Login", "Account")">Login <span class="sr-only">(current)</span></a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Register", "Account")">Register <span class="sr-only">(current)</span></a>
        </li>
    </ul>
}
